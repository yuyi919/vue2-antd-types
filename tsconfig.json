{
  "compilerOptions": {
    "module": "ESNext",
    "composite": true,
    "target": "es2020",
    "lib": ["es2015", "DOM"],
    "esModuleInterop": true,
    "declaration": true,
    "keyofStringsOnly": true,
    "outDir": "./dist",
    "sourceMap": true,
    "moduleResolution": "node",
    "rootDir": "./src",
    "newLine": "LF",
    "declarationDir": "./dist",
    "incremental": true,
    "strict": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
