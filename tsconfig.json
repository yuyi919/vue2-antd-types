{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "es5",
    "lib": ["es2015", "DOM"],
    "esModuleInterop": true,
    "declaration": true,
    "keyofStringsOnly": true,
    "outDir": "./types",
    "sourceMap": true,
    "newLine": "LF",
    "noUnusedLocals": true,
    "emitDeclarationOnly": true,
    "noUnusedParameters": true,
    "incremental": true,
    "strict": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "downlevelIteration": true,
    "jsx": "react-jsx",
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
